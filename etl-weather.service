[Unit]
Description=ETL Weather Web Application
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/etl-weather
Environment="PATH=/var/www/etl-weather/venv/bin"
EnvironmentFile=/var/www/etl-weather/.env
ExecStart=/var/www/etl-weather/venv/bin/uvicorn etl_weather.web:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
